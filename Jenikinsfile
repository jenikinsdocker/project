pipeline {
    agent any
    tools{
        maven 'maven 3.9.1'
    }
    stages{
        stage('Build Maven'){
            steps{
                checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/jenikinsdocker/project']]])
                bat 'mvn clean install'
            }
        }
        stage('Build docker image'){
            steps{
                script{
                    bat 'docker build -t srinu255/docker-dev-integration .'
                }
            }
        }
        
         stage('Push image to Hub'){
            steps{
                script{
                withCredentials([string(credentialsId: 'dockerhubpwd', variable: 'token')])  {
                bat 'docker login -u srinu255 -p ${token}'
 }
                bat 'docker push srinu255/docker-dev-integration'
                }
            }
        }
        
    }
}
